{
    "name": "grnsv/neuron-gigachat",
    "description": "GigaChat provider for Neuron AI.",
    "minimum-stability": "stable",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "guzzlehttp/guzzle": "^7.9",
        "neuron-core/neuron-ai": "^2.6",
        "psr/simple-cache": "^3.0",
        "ramsey/uuid": "^4.9"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.75",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^9.0",
        "rector/rector": "^2.0"
    },
    "scripts": {
        "analyse": [
            "vendor/bin/phpstan analyse --memory-limit=1G -v"
        ],
        "format": [
            "php-cs-fixer fix --allow-risky=yes"
        ],
        "refactor": [
            "vendor/bin/rector"
        ],
        "test": [
            "vendor/bin/phpunit --colors=always"
        ]
    },
    "scripts-descriptions": {
        "analyse": "Run PHPStan static analysis against your application.",
        "format": "Run PHP CS Fixer against your application.",
        "refactor": "Run rector for code refactoring.",
        "test": "Run PHPUnit to test"
    },
    "autoload": {
        "psr-4": {
            "NeuronAI\\Providers\\GigaChat\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NeuronAI\\Providers\\GigaChat\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        },
        "process-timeout": 600
    }
}
